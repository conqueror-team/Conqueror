<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.conqueror.blacklist.dao.BlackListDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.conqueror.blacklist.entity.BlackListEntity" id="blackListMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="groupName" column="group_name"/>
        <result property="imgUrl" column="img_url"/>
        <result property="regionName" column="region_name"/>
        <result property="remarks" column="remarks"/>
        <result property="status" column="status"/>
        <result property="severity" column="severity"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.conqueror.blacklist.entity.BlackListEntity">
		select * from tb_black_list where id = #{value}
	</select>

	<select id="queryList" resultType="com.conqueror.blacklist.entity.BlackListEntity">
		select bl.*,u.username createUserName from tb_black_list bl left join sys_user u on(bl.create_user_id=u.user_id)
		<where>
			<if test="name != null and name.trim() != ''">
				and (bl.name like CONCAT(CONCAT('%',#{name}),'%') or bl.group_name like CONCAT(CONCAT('%',#{name}),'%'))
			</if>
			<if test="status != null and status.trim() != ''">
				and bl.status=#{status}
			</if>
			
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by bl.${sidx} ${order}
            </when>
			<otherwise>
                order by bl.id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from tb_black_list bl
		<where>
			<if test="name != null and name.trim() != ''">
				and bl.name like CONCAT(CONCAT('%',#{name}),'%')
			</if>
			<if test="status != null and status.trim() != ''">
				and bl.status=#{status}
			</if>
			
		</where>
	</select>
	 
	<insert id="save" parameterType="com.conqueror.blacklist.entity.BlackListEntity" useGeneratedKeys="true" keyProperty="id">
		insert into tb_black_list
		(
			`name`, 
			`img_url`, 
			`region_name`, 
			`remarks`, 
			`create_user_id`, 
			`create_time`,
			`group_name`,
			`severity`
		)
		values
		(
			#{name}, 
			#{imgUrl}, 
			#{regionName}, 
			#{remarks}, 
			#{createUserId}, 
			#{createTime},
			#{groupName},
			#{severity}
		)
	</insert>
	 
	<update id="update" parameterType="com.conqueror.blacklist.entity.BlackListEntity">
		update tb_black_list 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="imgUrl != null and imgUrl!=''">`img_url` = #{imgUrl}, </if>
			<if test="regionName != null">`region_name` = #{regionName}, </if>
			<if test="remarks != null">`remarks` = #{remarks}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="groupName != null">`group_name` = #{groupName}, </if>
			<if test="severity != null">`severity` = #{severity}, </if>
			<if test="createUserId != null">`create_user_id` = #{createUserId}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from tb_black_list where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from  tb_black_list where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>